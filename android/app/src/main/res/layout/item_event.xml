<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_page"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/elevation_default_card_restState"
        app:cardCornerRadius="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <FrameLayout
                    android:layout_width="@dimen/height_toolbar"
                    android:layout_height="@dimen/height_toolbar"
                    android:padding="8dp"
                    >

                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:fabSize="mini"
                        app:backgroundTint="@color/ccc"
                        android:elevation="0dp"
                        android:clickable="false"
                        app:elevation="0dp"
                        android:src="@mipmap/ic_action_timetable"
                        >

                    </android.support.design.widget.FloatingActionButton>

                </FrameLayout>

                <com.litigy.lib.android.gui.view.textView.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="@color/ccc"
                    android:lines="1"
                    android:text="@string/auto_control_smart_plug"
                    app:fontAppearance="body2"
                    android:id="@+id/what"
                    />

                <com.litigy.lib.android.gui.view.textView.TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/tina_green"
                    app:fontAppearance="body2"
                    android:lines="1"
                    android:paddingRight="@dimen/margin_page"
                    android:id="@+id/name"
                    />

                <FrameLayout
                    android:layout_width="@dimen/height_toolbar"
                    android:layout_height="@dimen/height_toolbar">

                    <com.litigy.lib.android.gui.view.progress.PigressBar
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:pigressColor="@color/ccc"
                        app:pigressIndeterminate="false"
                        app:pigressProgress="100"
                        app:pigressMax="100"
                        android:id="@+id/status"/>

                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/height_toolbar"
                android:layout_marginRight="@dimen/margin_page"
                >



                <com.litigy.lib.android.gui.view.textView.TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="@color/flat_belize_hole"
                    app:fontStyle="latoBoldItalic"
                    app:fontSize="body2"
                    android:lines="1"
                    android:paddingRight="@dimen/margin_page"
                    android:id="@+id/when"
                    />

            </LinearLayout>



            <com.litigy.lib.android.gui.view.textView.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_page"
                android:layout_gravity="right"
                android:textColor="@color/ddd"
                android:id="@+id/duration"
                app:fontAppearance="caption"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>